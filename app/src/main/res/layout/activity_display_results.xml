<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_category"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C6E2FF"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:weightSum="1"
        tools:context="rebamit.basic.activity.DisplayResultsActivity">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="262dp"
            android:layout_height="70dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/basiclogo" />

        <ListView
            android:id="@+id/outfit_list_view"
            style="@android:style/TextAppearance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp"
            android:layout_marginTop="80dp"
            android:background="#ffffffff" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <Button
                android:id="@+id/cancel_button"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#fff"
                android:singleLine="true"
                android:text="@string/cancel"
                android:textStyle="bold" />

        </FrameLayout>

    </FrameLayout>

    <ListView
        android:id="@+id/navList_category"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#fff" />
</android.support.v4.widget.DrawerLayout>